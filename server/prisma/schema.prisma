// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id@default(autoincrement())
  userId String @unique @db.VarChar(20)
  salt String @db.VarChar(80)
  password String @db.VarChar(256)
  zipCode Int
  pace Decimal? @db.Decimal(7, 2)
  courses Course[]
  recruits Recruit[]
  attendees RecruitsOnUsers[]
}

model Course {
  id Int @id@default(autoincrement())
  title String @db.VarChar(512)
  img String @db.VarChar(512)
  path Json
  pathLength Int
  user User @relation(fields: [userId], references: [id])
  userId Int
  createdAt DateTime @default(now())
}

model Recruit {
  id Int @id@default(autoincrement())
  title String @db.VarChar(512)
  startTime DateTime
  maxPpl Int
  author User @relation(fields: [authorId], references: [id])
  authorId Int
  users RecruitsOnUsers[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RecruitsOnUsers {
  id Int @id@default(autoincrement())
  attendee User @relation(fields: [attendeeId], references: [id])
  attendeeId Int
  recruit Recruit @relation(fields: [recruitId], references: [id])
  recruitId Int
}